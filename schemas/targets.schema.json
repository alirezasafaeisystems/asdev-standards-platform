{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sync Targets",
  "type": "object",
  "properties": {
    "targets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "repo": { "type": "string" },
          "default_branch": { "type": "string" },
          "runtime_profile": { "type": "string" },
          "templates": { "type": "array", "items": { "type": "string" } },
          "optional_features": { "type": "array", "items": { "type": "string" } },
          "opt_outs": { "type": "array", "items": { "type": "string" } },
          "labels": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["repo", "default_branch", "templates", "optional_features", "opt_outs", "labels"],
        "additionalProperties": false
      }
    }
  },
  "required": ["targets"],
  "additionalProperties": false
}
