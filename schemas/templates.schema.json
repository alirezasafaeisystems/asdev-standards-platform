{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Repo Templates",
  "type": "object",
  "properties": {
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "version": { "type": "string" },
          "mode": {
            "type": "string",
            "enum": ["must", "should", "optional"]
          },
          "source_ref": { "type": "string" },
          "path": { "type": "string" }
        },
        "required": ["id", "version", "mode", "source_ref", "path"],
        "additionalProperties": false
      }
    }
  },
  "required": ["templates"],
  "additionalProperties": false
}
